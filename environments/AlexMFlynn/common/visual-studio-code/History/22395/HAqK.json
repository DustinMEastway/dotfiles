{
  "author": "Brass Raven",
  "bin": {
    "br": "bin/index.js"
  },
  "description": "A CLI for Brass Raven commands.",
  "keywords": [
    "br",
    "brass-raven",
    "cli"
  ],
  "license": "UNLICENSED",
  "name": "@brass-raven/cli",
  "scripts": {
    "build": "tsc --project tsconfig.app.json",
    "build:watch": "yarn prebuild && tsc --project tsconfig.app.json --watch",
    "lint": "eslint .",
    "prebuild": "node scripts/cp.js package.json ./build/package.json",
    "postbuild": "node scripts/chmod.js ./build/src/bin/index.js 0777",
    "setup": "yarn && yarn build && npm i -g ./build",
    "test": "yarn jest",
    "test:watch": "yarn jest --watch"
  },
  "version": "1.0.0",
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^16.11.0",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  }
}
